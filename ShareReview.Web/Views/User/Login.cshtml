@using ShareReview.Web.ViewModels;

@model UserLoginViewModel;
@{
}
<div class="container   ">
    <div class="row">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-6 mx-auto">
                    <div class="card border-secondary">
                        <div class="card-header">
                            <h3 class="mb-0 my-2">Login</h3>
                        </div>
                        <div class="card-body">
                            <form asp-action="Login" method="post">
                                <div class="form-group mb-3">
                                    <input asp-for="Name" class="form-control form-control-lg" 
                                        placeholder="Enter name" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                                <div class=" form-group mb-3">
                                    <input asp-for="Password" type="password" 
                                        class="form-control form-control-lg" placeholder="Enter password" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                @if (TempData["message"] != null)
                                {
                                        <div class="msg">@TempData["message"]</div>
                                }
                                <div class="row">
                                    <div class="col text-end">
                                        <button class="btn btn-success btn-lg" type="submit">Login</button>
                                    </div>
                                </div>  
                                <a  asp-area="" asp-controller="User" asp-action="Register"> Register </a>
                            </form>
                            <a asp-area="" asp-controller="User" asp-action="LogInGoogle"> login with google</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>