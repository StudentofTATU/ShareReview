@using ShareReview.Web.ViewModels.Reviews;
@using ShareReview.Models.Reviews;
@model ReviewViewModel;
@{
    ViewData["Title"] = "Create new Review";
    Layout = "~/Views/Shared/_Layout_Create_View.cshtml";
}
<div class="container py-5">
    <div class="row">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-6 mx-auto">
                    <div class="card border-secondary">
                        <div class="card-header">
                            <h3 class="mb-0 my-2">New Review</h3>
                        </div>
                        <div class="card-body">
                            <form method="post" asp-action="Create" enctype="multipart/form-data">
                           
                                <input asp-for="UserId" type="hidden" value="@ViewData["id"]">
                                <div class="form-group mb-3">
                                    <input asp-for="Name" class="form-control form-control-lg" placeholder="Enter name" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                                <div class="form-group mb-3">
                                    <input asp-for="ArtTitle" class="form-control form-control-lg" placeholder="Enter ArtTitle" />
                                    <span asp-validation-for="ArtTitle" class="text-danger"></span>
                                </div>
                                <div class="form-group mb-3">
                                    <select asp-for="Group" class="form-control form-control-lg" asp-items="Html.GetEnumSelectList<ReviewGroup>()">
                                    </select>
                                </div>
                                <div class="form-group mb-3">
                                    <div>
                                    <textarea asp-for="Text" id="tiny" class="form-control form-control-lg" placeholder="Enter Text" >

                                    </textarea>
                                    </div>
                                    <span asp-validation-for="Text" class="text-danger"></span>
                                </div>
                                
                                <div class="form-group mb-3">
                                    <input asp-for="Image" class="form-control " id="image_input"/>
                                    <span asp-validation-for="Image" class="text-danger"></span>
                                </div>
@*                                <div class="form-group mb-3">
                                    <div class="my-dropzone" style="height:300px; width:100%;background:red;"></div>
                               </div>*@
                                <div class="row">
                                    <div class="col text-end">
                                        <button class="btn btn-success btn-lg" type="submit">Create</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


